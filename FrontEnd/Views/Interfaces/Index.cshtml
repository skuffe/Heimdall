@model IEnumerable<FrontEnd.Models.tbl_Interfaces>

@{
    ViewBag.Title = "Interfaces";
}

<h2>Interfaces</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tbl_Clients.HostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InterfaceName)
        </th>
        <th>
            Interface Alias
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Clients.HostName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InterfaceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_InterfaceInfo.LastOrDefault().IfAlias)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InterfaceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.InterfaceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InterfaceID })
        </td>
    </tr>
}

</table>
